<?xml version="1.0" encoding="UTF-8"?>
<theme>
    <formatVersion>7</formatVersion>
	<include>./theme.xml</include>    
    <view name="splash">
        <image name="background" visible="false"/>

        <image name="background_extra" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <zIndex>0</zIndex>
            <visible>true</visible>
            <path ifSubset="Style:dark">./assets/splash/default-dark.png</path>
            <path ifSubset="Style:light">./assets/splash/default-light.png</path>
        </image>

        <text name="label">
            <color>F7F3F0</color>
            <forceUppercase>false</forceUppercase>
            <fontPath>./assets/fonts/VCR_OSD_MONO_1.001.ttf</fontPath> <!-- PIXEL FONT -->
            <zIndex>500</zIndex>
        </text>

		<image name="progressbar">
			<origin>0 0</origin>
			<pos>0.250 0.703</pos>
			<rotation>0</rotation>
			<rotationOrigin>1.1 1.6</rotationOrigin>
			<color>F7F3F0</color>
		</image>        

		<image name="progressbar:active">
            <pos>0.250 0.703</pos>
			<color>1D1916</color>
			<colorEnd>1D1916</colorEnd>
			<gradientType>vertical</gradientType>
		</image>

    </view>

</theme>